---
import Layout from "../../layouts/Layout.astro";
import Chat from "../../components/Chat.astro";
---

<Layout title="Loadeksdi's portfolio | Contact">
    <main class="flex-1 flex flex-col gap-4 mx-10 font-sans">
        <h1 class="text-3xl font-cursive font-bold text-center text-purple-900">
            Contact
        </h1>
        <Chat />
        <h2 class="text-2xl font-cursive text-left text-purple-700">
            Other ways to get in touch with me
        </h2>
        <div class="flex flex-col text-1xl justify-center text-left gap-2">
            <div>
                <a href="mailto:nicolas.load@gmail.com"
                    >Send me an email<i class="fa fa-envelope fa-2x"></i>
                </a>
            </div>
            <div>
                <a
                    href="https://www.linkedin.com/in/nicolas-orvain/"
                    target="_blank"
                    rel="noreferrer"
                    >Connect with me on LinkedIn<i class="fab fa-linkedin fa-2x"
                    ></i>
                </a>
            </div>
            <div>
                <span
                    >Talk with me on Discord: Ｌｏａｄ#7314<i
                        class="fab fa-discord fa-2x"></i>
                </span>
            </div>
        </div>
    </main>
</Layout>
